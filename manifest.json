{
  "manifest_version": 3,
  "name": "Tab Media Controller",
  "version": "1.0.0",
  "description": "Control volume and media playback for individual tabs",
  "permissions": ["tabs", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/volume-icons/volume16.png",
      "48": "icons/volume-icons/volume48.png",
      "128": "icons/volume-icons/volume128.png"
    }
  },
  "icons": {
    "16": "icons/volume-icons/volume16.png",
    "48": "icons/volume-icons/volume48.png",
    "128": "icons/volume-icons/volume128.png"
  }
}